<Window x:Name="calcWindow" x:Class="CalculatorX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorX"
        mc:Ignorable="d"
        Title="Calculator" Height="413" Width="436">
    <Grid Margin="0,0,0,0
          " Background="#FFEDE8E8">
        <Button x:Name="btnGetResult" IsDefault="True" Click="btnStart" Content="вычислить выражение" HorizontalAlignment="Center" Height="50" Margin="0,311,0,0" VerticalAlignment="Top" Width="380" BorderBrush="#FFCE2E2E" Background="White" FontSize="20" FontFamily="Arial" Foreground="#FF2F0909" BorderThickness="3,3,3,3" FontWeight="Bold"/>
        <TextBox x:Name="tbExpression" HorizontalAlignment="Center" Height="47" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" FontSize="20" Margin="0,44,0,0" TextAlignment="Center"/>
        <Label x:Name="lblResult" Content="" HorizontalAlignment="Center" Height="42" Margin="0,237,0,0" VerticalAlignment="Top" Width="380" FontSize="20" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="tbVariableValue" HorizontalAlignment="Center" Height="47" Margin="0,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" FontSize="20" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,7,0,0" TextWrapping="Wrap" Text="Введите выражение:" VerticalAlignment="Top" Height="32" Width="211" FontSize="20" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,97,0,0" TextWrapping="Wrap" Text="Введите значение переменной" VerticalAlignment="Top" Height="35" Width="350" FontSize="20" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Center" Height="36" Margin="0,201,0,0" TextWrapping="Wrap" Text="Ответ:" VerticalAlignment="Top" Width="282" TextAlignment="Center" FontSize="20"/>

    </Grid>
</Window>
