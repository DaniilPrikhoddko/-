<Window x:Name="calcWindow" x:Class="CalculatorX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorX"
        mc:Ignorable="d"
        Title="Calculator" Height="432" Width="1116">
    <Grid Margin="0,0,0,-6" Background="#FFFBF0FB">

        <Button x:Name="btnGetResult" IsDefault="True" Click="btnStart" Content="вычислить выражение" HorizontalAlignment="Left" Height="40" Margin="800,347,0,0" VerticalAlignment="Top" Width="294" BorderBrush="#FFF485F5" Background="White" FontSize="20" FontFamily="Arial" Foreground="#FF2F0909" BorderThickness="3,3,3,3" FontWeight="Bold"/>
        <TextBox x:Name="tbExpression" HorizontalAlignment="Left" Height="28" TextWrapping="Wrap" VerticalAlignment="Top" Width="294" FontSize="16" Margin="800,40,0,0" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="841,8,0,0" TextWrapping="Wrap" Text="Введите выражение:" VerticalAlignment="Top" Height="32" Width="212" FontSize="16" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Height="30" Margin="814,68,0,0" TextWrapping="Wrap" Text="Начало" VerticalAlignment="Top" Width="266" FontSize="16" TextAlignment="Center"/>
        <TextBox x:Name="tbStartPosition" HorizontalAlignment="Left" Height="28" Margin="800,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="294" FontSize="16" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Height="30" Margin="826,126,0,0" TextWrapping="Wrap" Text="Конец" VerticalAlignment="Top" Width="242" FontSize="16" TextAlignment="Center"/>
        <TextBox x:Name="tbFinishPosition" HorizontalAlignment="Left" Height="28" Margin="800,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="294" FontSize="16" TextAlignment="Center"/>
        <Canvas x:Name="cForGraphic" Loaded="cForGraphic_Loaded" Margin="35,24,379,94" Grid.RowSpan="2" Background="White" MouseMove="cForGraphic_MouseMove" ClipToBounds="True"/>
        <TextBlock HorizontalAlignment="Left" Height="30" Margin="800,181,0,0" TextWrapping="Wrap" Text="Шаг" VerticalAlignment="Top" Width="294" FontSize="16" TextAlignment="Center"/>
        <TextBox x:Name="tbStep" HorizontalAlignment="Left" Margin="800,211,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="294" Height="28" FontSize="16" TextAlignment="Center"/>
        <Label x:Name="lblUiCoordinates" Content="" HorizontalAlignment="Left" Margin="35,352,0,0" VerticalAlignment="Top" Width="246" FontSize="16" HorizontalContentAlignment="Center"/>
        <Label x:Name="lblMathCoordinates" Content="" HorizontalAlignment="Left" Margin="286,351,0,0" VerticalAlignment="Top" Width="246" FontSize="16" HorizontalContentAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Height="30" Margin="800,239,0,0" TextWrapping="Wrap" Text="Масштаб" VerticalAlignment="Top" Width="294" TextAlignment="Center" FontSize="16"/>
        <TextBox x:Name="tbZoom" HorizontalAlignment="Left" Margin="800,269,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="294" Height="28" FontSize="16" TextAlignment="Center"/>

    </Grid>
</Window>
